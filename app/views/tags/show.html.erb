<h1>All the Tasks you can do "<%= @tag.name %>"</h1>
<button><%= link_to "Edit this tags name", edit_tag_path(@tag) %>  </button>

  <%= form_tag @tag, method: "delete", class: 'delete_btn' do %>
      <%= submit_tag "Delete Tag" %>
      <% end %>
<p>
<%= link_to "Sort by Project", tag_path(sort: "by_project")%>|
<%= link_to "Sort by Estimated Task Time", tag_path(sort: "by_time")%>|
<%= link_to "Sort by Name", tag_path(sort: "by_name")%>
<br><br>
</p>

<ul>   

<% @tag_tasks.each do |task| %>
<li>Task: <%= link_to(task.name, task_path(task)) %>
Project: <%= link_to(task.project.name.capitalize, project_path(task.project)) %> </li>
<% end %>

</ul>