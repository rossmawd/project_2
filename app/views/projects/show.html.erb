<h1> Project: <%= @project.name.capitalize %></h1>

<h3>Description: </h3>
<p><%= @project.description %></p>
<h3>Tasks: </h3>
<ol>
<% @project.tasks.each do |task| %>

    <li><h4><%= link_to(task.name, task_path(task)) %>
    <% if task.archive == true  %>
  Completed!
    <% end %>
    </h4>
    <p>Tags:
    <% task.tags.each do |tag|  %>
        <%= link_to(tag.name, tag_path(tag)) %>
    <% end %>
    </p>
    </li>

<% end %>
</ol>
